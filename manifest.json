{
    "manifest_version": 3,
    "name": "RostamRoutines",
    "version": "1.0",
    "description": "Task and time management extension with Pomodoro timer and calendar integration.",
    "permissions": ["storage", "alarms", "identity"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/RostamRoutines-tlogo.png"
    },
    "options_page": "options.html",
    "icons": {
      "16": "icons/RostamRoutines-tlogo.png",
      "48": "icons/RostamRoutines-tlogo.png",
      "128": "icons/RostamRoutines-tlogo.png"
    }
  }
  